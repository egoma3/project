@model List<MyTvChannel.Models.MyChannelViewModel>
<br />
@foreach (var a in Model)
{
    <div class="well container ">
        <div class="row ">
            <div class="col-sm-4 col-sm-offset-4 text-center">
                <img src="@a.imageUrl" class="channel-img img-rounded" />
            </div>
        </div>
        <div class="row channel">
            <div class="col-sm-12 text-center">
                <h4><i>Name: </i>@a.Name</h4>
                
                
                <br /> 
                @Html.ActionLink("Details", "MyChannelDetails", new { id = a.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "DeleteMyChannel", new { id = a.Id }, new { @class = "btn btn-large btn-danger" })
            </div>
        </div>
        <div class="row">
            @foreach (var show in a.myShows)
            {
                <div class="panel panel-info col-sm-4">

                    <div class="panel-heading">@Html.ActionLink(show.Title, "MyShowsDetails", new { id = show.Id })</div>
                    <div class="panel-body">
                        <img src="@show.imageUrl" class="img-responsive img-rounded" />
                    </div>
                    <div class="panel-footer">
                        <label class="label label-primary">Value: $</label>@show.Price.ToString("$#,##0.00")
                    </div>
                </div>
            }
        </div>



    </div>

}